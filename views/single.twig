{% extends 'layouts/main.twig' %}


{% block main_content %}

<article itemscope itemtype="http://schema.org/BlogPosting">

	<div class="pattern pattern--article">

		<header class="article__header">
			<div class="container mx950">
				<h1 class="title" itemprop="headline">{{ post.title }}</h1>
				<div class="byline">
					<span class="post-author">By
						<a href="{{ post.author.link() }}" rel="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
							<span itemprop="name">{{ post.author }}</span>
						</a>
					</span>
					<span class="post-date">On
						<time itemprop="datePublished" content="{{ post.date | date('c') }}">{{ post.date }}</time>
					</span>
				</div><!-- //byline -->

				{# if logo gets updated, make sure to check this files logo and dimensions #}
				{% include 'partials/blog/article-schema.twig' %}

				{% if post.thumbnail() %}
					{# Rich Snippet markup for the Featured Image. Note: Google won't display a Rich Snippet without one of these #}
					<div class="feature-image" itemscope itemprop="image" itemtype="http://schema.org/ImageObject">
						<img src="{{ post.thumbnail().src('gallery') }}" alt="{{ post.thumbnail().alt() | default(post.title) }}" itemprop="url">
						<meta itemprop="width" content="{{ post.thumbnail().width('large') }}">
						<meta itemprop="height" content="{{ post.thumbnail().height('large') }}">
					</div>
				{% endif %}

			</div>
		</header>

		<div class="article__content">
			<div class="container mx950">


				<div class="rtecontent">{{ post.content }}</div>

				<div class="article__taxonomies">
					{% include 'partials/blog/post-categories.twig' %}
					{% include 'partials/blog/post-tags.twig' %}
				</div>

			</div>
		</div>

	</div><!-- //.pattern--article -->

	<footer class="pattern pattern--article-footer">
		<div class="container">

				<div class="pattern__header">
					<h2>Related Articles</h2>
				</div>

				<div class="flex-row">
				{% for postItem in post.related(3) %}
					<div class="col-flex col-lg-4 col-sm-12 col-xs-12">
						{% include 'partials/cards/article-card.twig' with { post : postItem, cardCrop : 'article-card' } %}
					</div>
				{% endfor %}
				</div>

				<div class="pattern__footer">
					<a href="{{ get_blog_url() }}" class="btn">Back to News</a>
				</div>

		</div>
	</footer>
	{# function( 'comments_template' ) #}

</article>


{% endblock %}
