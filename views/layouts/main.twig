<!doctype html>
<html lang="en" class="no-js">
<head>

	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>{% block title %}{{ wp_title }}{% endblock %}</title>

	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<link rel="shortcut icon" type="image/png" href="{{ img_url('favicon.png') }}">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-76.png') }}" sizes="76x76">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-120.png') }}" sizes="120x120">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-152.png') }}" sizes="152x152">

    {# GOOGLE FONT #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

	{{ fn('wp_head') }}

</head>
<body class="{{ body_classes | join(' ') }}">

{# necessary for tag manager plugin manually coded custom setting #}
{{ gtm4wp_the_gtm_tag() }}

<a class="skip-to-content-link" href="#main">Skip to main content</a>

<div class="site-wrapper"><div class="site-pusher">

	{% block header %}
		{% include 'partials/blocks/header.twig' %}
	{% endblock %}

	<main id="main" class="site-main">
		{% block main_content %}
			Default main content
		{% endblock %}
	</main>

	{% block footer %}
		{% include 'partials/blocks/footer.twig' %}
	{% endblock %}

    {% block inline_popups %}
        {% include 'partials/blocks/popup-search.twig' %}
    {% endblock %}

</div></div><!-- //.site-pusher //.site-wrapper -->

{# everything below here is included automagically by WP #}
{{ fn('wp_footer') }}


</body>
</html>
